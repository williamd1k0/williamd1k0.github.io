.post
    +above(rem(halfhd))
        margin-left: 347px
    h1, h2, h3
        color page_title
        &:before
            color main
            font-weight 300
            margin-right 10px
    h1
        text-align center
        margin 0
        font-size rem(30px)
        +above(cut)
            font-size rem(40px)
        &:before
            content "#"
            color main
            font-size rem(40px)
    .time
        color page_date
        text-align center
        margin-top 30px
        mainFont(300)
    .music-read
        text-align center
.post-content
    padding rem(16px) 0
    img, iframe, video
        max-width 100%
        margin rem(30px) auto
        display block
    p, h1, h2, h3, h4,ul,ol, .tags, iframe
        max-width rem(800px)
        padding 0 rem(20px)
        margin 0 auto rem(30px)
        mainFont(300)
        font-size rem(18px)
        line-height 2
        letter-spacing 0.01rem
        +above(cut)
            font-size rem(20px)
    p, li, figcaption, ul
        color texts
        code
            color colorcode
    a
        mainFont(300)
        color #927db9
        text-decoration none
        border-bottom 2px solid main
        &:hover
            background-color mainHover
            color #FFFFFF
            border-bottom 2px solid #ab95d2
    iframe
        margin-top rem(30px)
        width 100%
    #twitter-widget-0
    	margin auto !important
    h1,h2,h3,h4,h5
        mainFont(800)
    h1
        font-size rem(30px)
        line-height 1.4
        +above(cut)
            font-size rem(45px)
    h2
        padding 0;
        margin-left 10%;
        font-size rem(22px)
        line-height 1.4
        +above(cut)
            font-size rem(35px)
    h3
        font-size rem(18px)
        line-height 1.4
        +above(cut)
            font-size rem(25px)
    ul,ol
        padding-left rem(40px)

    blockquote
        center(rem(730px))
        border-left rem(5px) solid main
        padding 0 rem(30px)
        margin rem(50px) auto
        background-color #0000002e
        +below(cut)
            width 70%
        p
            color texts
            margin 0
            +below(cut)
                font-size rem(18px)
                line-height 1.5
                padding 0
    hr
    	center(rem(760px))
    	border 1px solid lightGray
    	margin 50px auto
    .about_perfil
        width 200px
.share
    center(800px)
    text-align center
    border-top 1px solid lightGray
    padding-top rem(20px)
    svg
        margin rem(15px)
        size(35,35)
    a
        text-decoration none
        &:hover svg
            fill main

table
    margin rem(50px) auto
    +below(cut)
        display none
    th, td
        border rem(2px) solid #ccc
        padding rem(5px)

.tag-title
    mainFont(300)
    font-size rem(36px)
    margin-top rem(60px)
    center(rem(800px))
    color texts
    +below(cut)
        font-size rem(28px)
        margin-top rem(20px)
        padding 0 rem(20px)

.tag-close
    margin-top 0px

.post-list
    list-style none
    margin rem(25px) auto
    +below(cut)
        padding 0 rem(20px)
    a
        display block
        border-bottom 1px solid darken(lightGray,10%)
        padding rem(10px) 0
        text-decoration none
        transition all .5s
        &:hover
            color #FFFFFF
            border-bottom 1px solid hover
    .entry-date
        float right
        +below(cut)
            display none
    img
        max-height 200px

.post-image
    background-color #2f2f33
    padding 15px
    img
        max-height 300px

img, figure
    &.left
        float left
        margin-right 30px

    &.right
        float right
        margin-left 30px

figcaption
    text-align center
    margin-top -20px

.header-post
    a
        color #ffffff
        text-decoration none