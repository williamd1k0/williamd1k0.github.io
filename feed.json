---
layout: null
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ site.title }}",
    "description": "{{ site.description | strip }}",
    "home_page_url": "{{ site.url }}{{ site.baseurl }}/",
    "feed_url": "{{ "/feed.json" | prepend: site.baseurl | prepend: site.url }}",
    "items": [
    {% for post in site.posts limit:10 %}
        {
            "id": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
            "date_published": "{{ post.date | date_to_xmlschema }}",
            "url": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
            "title": "{{ post.title }}",
            "content_text": "{{ post.content | strip_newlines | strip_html | truncatewords:100 }}",
            {% if post.image %}
            "image": "{{post.image}}",
            {% endif %}
            "tags": [
                {% for tag in post.tags %}
                "{{ tag }}",
                {% endfor %}
                {% for cat in post.categories %}
                "{{ cat }}"{% unless forloop.last %},{% endunless %}
                {% endfor %}
            ]
        }{% unless forloop.last %},{% endunless %}
    {% endfor %}
    ]
}